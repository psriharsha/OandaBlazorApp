@inherits ProductBase
@using OandaBlazorApp.Misc

@if (type == Models.ViewType.TABLE)
{
    <tr>
        <td>
            <div class="btn btn-success"
                    @onclick="(() => PlaceOrder(true))">
                @((MarkupString)stock.bid.ShowAsPrice(type))
            </div>
        </td>
        <td>
            <b>
                @stock.name.DisplayStockName()
            </b>
        </td>
        <td>
            <div class="btn btn-danger"
                    @onclick="(() => PlaceOrder(false))">
                @((MarkupString)stock.ask.ShowAsPrice(type))
            </div>
        </td>
    </tr>
}
else
{
    <div class="card text-white mb-3" style="max-width: 20rem;">
        <div class="card-header">
            <h4 class="card-title">@stock.name.DisplayStockName()</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    <div class="btn btn-success"
                            @onclick="(() => PlaceOrder(true))">
                        @((MarkupString)stock.bid.ShowAsPrice(type))
                    </div>
                </div>
                <div class="col-6">
                    <div class="btn btn-danger"
                            @onclick="(() => PlaceOrder(false))">
                        @((MarkupString)stock.ask.ShowAsPrice(type))
                    </div>
                </div>
            </div>
        </div>
    </div>
}